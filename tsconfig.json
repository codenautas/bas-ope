{
    "compilerOptions": {
        "declaration": true,
        "outDir": "this-dir-must-not-be-created",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib":["es2015", "dom"],
        "skipLibCheck": true, // para que no falle porque no encuentra express en node_modules/backend-plus/lib/backend-plus.d.ts
        "target": "es5",
        "module": "umd",
        "typeRoots" : ["node_modules/@types"],
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
        "noFallthroughCasesInSwitch": true
    },
    "include":[
        "src/**/*"
    ]
}